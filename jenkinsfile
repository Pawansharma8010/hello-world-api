pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Pawansharma8010/hello-world-api'
            }
        }
        stage('Restore Dependencies') {
            steps {
                sh 'dotnet restore'
            }
        }
        stage('Build') {
            steps {
                sh 'dotnet build'
            }
        }
        stage('Publish') {
            steps {
                sh 'dotnet publish -o ./publish'
            }
        }
        stage('Deploy') {
            steps {
                sh '''
                docker build -t dotnet-api:latest .
                docker run -d -p 5275:5275 --name dotnet-api dotnet-api:latest
                '''
            }
        }
    }
}
